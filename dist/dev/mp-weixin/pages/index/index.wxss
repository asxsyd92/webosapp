.uni-list-item {
  border-bottom-style: solid;
  border-bottom-width: 1px;
  border-bottom-color: #eee;
  font-size: 14px;
}
.uni-list-item__container {
  display: flex;
  width: 100%;
  box-sizing: border-box;
  flex: 1;
  position: relative;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.uni-list-item__content-title {
  font-size: 14px;
  color: #666;
}
.text {
  font-size: 14px;
  margin-top: 5px;
}
.grid-dynamic-box {
  margin-bottom: 5px;
}
.grid-item-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 5px 0;
}
.grid-item-box-row {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 5px 0;
}
.grid-dot {
  position: absolute;
  top: 5px;
  right: 15px;
}
